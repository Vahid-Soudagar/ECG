<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#80F6F6F6"
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Patient's Profile"
                android:textColor="@color/grey"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Full Name"
                android:textColor="@color/grey"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tv_profile"
                app:layout_constraintTop_toBottomOf="@id/tv_profile" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_patient_name_d"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/grey1"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toStartOf="@+id/tv_patient_name"
                app:layout_constraintTop_toBottomOf="@id/tv_patient_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_patient_name_d"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_box_background"

                    android:inputType="text"
                    android:padding="0dp"
                    android:textColor="@color/grey1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_patient_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:text="Gender"
                android:textColor="@color/grey"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_profile" />

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/et_patient_gender_d"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginVertical="7dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/edittext_box_background"

                android:gravity="center_vertical"
                android:hint="Select"
                android:maxHeight="20dp"
                android:paddingStart="8dp"
                android:textColor="@color/grey"
                android:textColorHint="#818589"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_patient_gender"
                app:layout_constraintTop_toBottomOf="@id/tv_patient_name"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/black"
                app:spinner_divider_color="@color/black"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/white" />

            <TextView
                android:id="@+id/tv_patient_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="Mobile Number"
                android:textColor="@color/grey"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/til_patient_name_d" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_patient_mobile_number_d"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/grey1"
                app:layout_constraintEnd_toStartOf="@id/guideline"
                app:layout_constraintStart_toStartOf="@+id/tv_patient_mobile_number"
                app:layout_constraintTop_toBottomOf="@id/tv_patient_mobile_number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_patient_mobile_d"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_box_background"

                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/grey1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_patient_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="10dp"
                android:text="DOB"
                android:textColor="@color/grey"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/guideline"
                app:layout_constraintTop_toBottomOf="@id/et_patient_gender_d" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_patient_dob_d"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="24dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:cursorColor="@color/grey1"
                app:endIconDrawable="@drawable/ic_calendar"
                app:endIconMode="custom"
                app:endIconTint="@color/grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_patient_age"
                app:layout_constraintTop_toBottomOf="@id/tv_patient_age">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_patient_dob_d"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_box_background"

                    android:gravity="center_vertical"
                    android:inputType="date"
                    android:padding="8dp"
                    android:textColor="@color/grey1"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="33dp"
        android:visibility="gone"
        android:layout_margin="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#C9C9C9"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="45dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@id/profile_card"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose recording time"
                android:textColor="@color/black"
                android:textSize="35dp" />

            <RadioGroup
                android:id="@+id/timergroupradio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radia_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/blue"
                    android:checked="true"
                    android:text="10 Sec"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

                <RadioButton
                    android:id="@+id/radia_id2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:buttonTint="@color/blue"
                    android:text="15 Sec"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="or"
                android:textColor="#B6B6B6"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/et_timer"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="@drawable/edittext_box_background"
                android:hint="Enter time in sec"
                android:paddingStart="14dp"
                android:textColor="@color/grey1"
                android:textColorHint="@color/grey" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/timer_next_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/bg_btn"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Next"
        android:textSize="22sp"
        app:flow_horizontalBias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_card" />

    <TextView
        android:id="@+id/timer_back_btn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Back"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/timer_next_btn"
        app:layout_constraintEnd_toStartOf="@+id/timer_next_btn"
        app:layout_constraintHorizontal_bias="0.807"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>