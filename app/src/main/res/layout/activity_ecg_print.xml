<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.EcgPrintActivity">

    <android.widget.Button
        android:id="@+id/pdf_back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/generatefileandshowecg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/pdf_back_btn"
        android:layout_marginStart="15dp"
        android:text="Generate File"
        android:textAllCaps="false"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/print_pdf_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print File"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@drawable/bg_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/generatefileandshowecg"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/generate_parameter_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Data"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:visibility="gone"
        android:background="@drawable/bg_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/print_pdf_btn"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/pdf_back_btn"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <com.vcreate.ecg.view.EcgGraphView
            android:id="@+id/ecg_graph_view1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="15dp" />

        <com.vcreate.ecg.view.EcgGraphView
            android:id="@+id/ecg_graph_view2"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="15dp" />

        <com.vcreate.ecg.view.EcgGraphView
            android:id="@+id/ecg_graph_view3"
            android:layout_width="match_parent"
            android:layout_height="250dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>